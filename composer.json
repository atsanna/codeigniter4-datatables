{
	"name": "atsanna/codeigniter4-datatables",
	"type": "project",
	"description": "DataTables support for CodeIgniter 4.2.x",
	"homepage": "https://github.com/atsanna/codeigniter4-datatables",
	"license": "MIT",
	"authors": [
		{
			"name": "Antonio Sanna",
            "email": "atsanna@tiscali.it",
            "homepage": "https://github.com/atsanna",
            "role": "Developer"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^7.4 || ^8.0 || ^8.1 || ^8.2",
		"ext-json": "*",
		"codeigniter4/framework": "^4.2",
		"codeigniter4/shield": "dev-develop",
        "codeigniter4/settings": "^2.0",
		"components/font-awesome": "^6.2",
		"league/commonmark": "^2.0",
		"roave/security-advisories": "dev-latest",
		"spatie/commonmark-highlighter": "^3.0"
	},
	"require-dev": {
		"codeigniter/coding-standard": "^1.1",
		"fakerphp/faker": "^1.9",
		"mikey179/vfsstream": "^1.6",
		"nexusphp/cs-config": "^3.1",
		"nexusphp/tachycardia": "^1.0",
		"phpstan/phpstan": "^1.1",
		"phpunit/phpunit": "^9.1",
		"psr/container": "^2.0",
		"qossmic/deptrac-shim": "^0.24.0",
		"vimeo/psalm": "^5.18",
		"symfony/filesystem": "^5.4",
		"rector/rector": "^0.13.5",
        "sebastian/phpcpd": "^6.0.3"
    },
	"suggest": {
		"ext-fileinfo": "Improves mime type detection for files"
	},
	"autoload": {
		"psr-4": {
			"atsanna\\DataTables\\": "src"
		},
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests",
			"Tests\\Support\\": "tests/_support"
		}
	},
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
		"analyze": "phpstan --memory-limit=1024M --xdebug analyze",
		"ci": [
			"Composer\\Config::disableProcessTimeout",
			"@deduplicate",
			"@analyze",
			"@test",
			"@inspect",
			"@style"
		],
        "cs-fix": "@style",
		"deduplicate": "phpcpd src/",
		"inspect": "deptrac analyze --cache-file=build/deptrac.cache",
		"style": "php-cs-fixer fix --verbose --ansi --using-cache=no",
		"test": "XDEBUG_MODE=coverage phpunit"
	},
	"support": {
		"forum": "http://forum.codeigniter.com/"
	},
	"funding": [
        {
            "type": "other",
            "url": "https://www.paypal.me/atsanna"
        }
    ]
}
