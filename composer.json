{
	"name": "atsanna/codeigniter4-datatables",
	"type": "project",
	"description": "DataTables support for CodeIgniter 4",
	"homepage": "https://github.com/atsanna/codeigniter4-datatables",
	"license": "MIT",
	"authors": [
		{
			"name": "Antonio Sanna",
            "email": "atsanna@tiscali.it",
            "homepage": "https://github.com/atsanna",
            "role": "Developer"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^7.4 || ^8.0",
		"ext-json": "*",
		"codeigniter4/framework": "^4.2",
		"components/font-awesome": "^6.1",
		"league/commonmark": "^2.0",
		"roave/security-advisories": "dev-latest",
		"spatie/commonmark-highlighter": "^3.0"
	},
	"require-dev": {
		"codeigniter/coding-standard": "^1.1",
		"fakerphp/faker": "^1.9",
		"mikey179/vfsstream": "^1.6",
		"nexusphp/cs-config": "^3.1",
		"nexusphp/tachycardia": "^1.0",
		"phpstan/phpstan": "^1.1",
		"phpunit/phpunit": "^9.1",
		"psr/container": "^2.0"
	},
	"suggest": {
		"ext-fileinfo": "Improves mime type detection for files"
	},
	"autoload": {
		"psr-4": {
			"atsanna\\DataTables\\": "src"
		},
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests",
			"Tests\\Support\\": "tests/_support"
		}
	},
	"funding": [
        {
            "type": "other",
            "url": "https://www.paypal.me/atsanna"
        }
    ]
}
